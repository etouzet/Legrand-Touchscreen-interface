            </div>
            <div class="block-nav lastElement">
                <li class="documentName"> Contrôle Renforcé Production </li>
                <p class="nbDocument">3</p>
            </div>
        </ul>
    </section>

    <section id="clavier">
        <div id="container">
            <div id="block-keyboard">
                <ul id="keyboard">
